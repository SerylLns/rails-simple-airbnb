<h2>All our Flats (<%= @flats.count %>)</h2>

<div class="row">
  <% @flats.each do |flat| %>
    <div class="card m-3" style="width: 18rem;">
    <div class="card-image" style="background-image: url('<%= flat.picture_url %>'); height: 200px; background-position: center; background-size: cover;">
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= flat.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
      <div class="card-text row">
        <p class="col-6"><i class="fas fa-users"> </i> <%= flat.number_of_guests %> </p>
        <p class="col-6"><i class="fas fa-euro-sign"> </i> <%= flat.price_per_night %></p>
      </div>
      <hr>
      <%= link_to "See More", flat_path(flat), class: "card-link mr-1" %>
      <%= link_to "Edit ", edit_flat_path(flat), style: "color: yellow; mr-2" %>
      <%= link_to "Delete", flat_path(flat), method: "delete", style: "color: red;" %>
    </div>
  </div>
  <% end %>
</div>