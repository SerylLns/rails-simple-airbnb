<div class="row m-2">
  <div class="card col-10 text-center  m-3 pr-2" >
    <div class="card-image" style="background-image: url('<%= @flat.picture_url %>'); height: 400px; background-position: center; background-size: cover;">
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= @flat.name %></h5>
      <hr>
      <h6 class="card-subtitle mb-2 text-muted"><%=@flat.address  %></h6>
      <p class="card-text"><%= @flat.description %></p>
      <br><br>
      <div class="card-text row">
        <p class="col-6"><i class="fas fa-users"> </i> <%= @flat.number_of_guests %> </p>
        <p class="col-6"><i class="fas fa-euro-sign"> </i> <%= @flat.price_per_night %></p>
      </div>
    </div>
  </div>





</div>