<div class="row">
  <div class="card col-6 text-center" style="height: 60vh; " >
    <div class="card-body">
      <h5 class="card-title"><%= @flat.name %></h5>
      <hr>
      <h6 class="card-subtitle mb-2 text-muted"><%=@flat.address  %></h6>
      <hr>
      <p class="card-text"><%= @flat.description %></p>
      <hr><br><br>
      <div class="card-text row">
        <p class="col-6"><i class="fas fa-users"> </i> <%= @flat.number_of_guests %> </p>
        <p class="col-6"><i class="fas fa-euro-sign"> </i> <%= @flat.price_per_night %></p>
      </div>
    </div>
  </div>





</div>